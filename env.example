DATABASE_URL=postgresql+psycopg2://postgres:postgres@localhost:5432/intelliflow
OPENAI_API_KEY=sk-xxxxx
OPENAI_BASE_URL=
OPENAI_MODEL=gpt-4o-mini
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIM=1536
 

 
GITHUB_TOKEN=
GITHUB_REPO=owner/repo
GITHUB_BRANCH=main
GITHUB_BASE_PATH=content

LOCAL_WORKSPACE=./workspace

# 数据库初始化开关：开发环境 true，生产环境 false（使用 Alembic 迁移）
AUTO_INIT_DB=true
CHUNK_SIZE=800
CHUNK_OVERLAP=100
TOP_K=4
SESSION_WINDOW_SIZE=12
SUMMARY_TRIGGER_MESSAGES=10

# Session 配置（生产级）
# Redis URL：配置后自动启用 Redis 存储，未配置则使用内存（开发模式）
REDIS_URL=redis://localhost:6379/0
# Session 过期时间（秒），默认 30 分钟
SESSION_TTL_SECONDS=1800

